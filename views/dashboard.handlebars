<section class="new-post-section">
  <a href="/dashboard/new">+ Create new post</button>
</section>


{{#if posts.length}}
<section>
  <h2>Dashboard</h2>
  <ul class="post-list">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}