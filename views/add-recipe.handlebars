<article>
  <section>
    <div>
      <h2>Create New Recipe</h2>
    </div>
    <div>
      <form id="new-recipe-form">
        <div>
          <label for="recipe-title">Title</label>
          <input type="text" id="recipe-title" name="recipe-title" />
        </div>
        <div>
          <label for="recipe-difficulty">Difficulty</label>
          {{!-- <input type="" /> --}}
          <select id="recipe-difficulty" name="recipe-difficulty">
            {{!-- loop through difficulties and display --}}

            {{#each difficulties}}
            <option value="{{this.value}}">{{this.text}}</option>
            {{/each}}
          </select>
        </div>
        <div>
          <label for="recipe-ingredients">Ingredients</label>
          <input type="text" id="recipe-ingredients" name="recipe-ingredients" />
        </div>
        <div>
          <label for="recipe-instructions">Instructions</label>
          <textarea class="entry-field" id="recipe-instructions" name="recipe-instructions"></textarea>
        </div>
        <button type="submit">Create</button>
      </form>
    </div>
  </section>
</article>

<script src="/js/create-recipe.js"></script>